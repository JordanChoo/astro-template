---
/**
 * PageLayout.astro
 *
 * Standard page layout extending BaseLayout with Header and Footer.
 * Use this for all regular pages (Home, Services, Locations, Contact, etc.).
 */

import BaseLayout from './BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  /** Page title - passed to BaseLayout */
  title: string;
}

const { title } = Astro.props;
---

<BaseLayout title={title}>
  <slot name="head" slot="head" />

  <Header />

  <main id="main-content" class="min-h-screen">
    <slot />
  </main>

  <Footer />
</BaseLayout>
