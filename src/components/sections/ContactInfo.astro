---
/**
 * Contact Info Section Component
 *
 * Displays business contact information from site config.
 * Only shows sections that have data configured.
 *
 * @example
 * ```astro
 * <ContactInfo />
 * ```
 */

import siteConfig from '@/config/site';
import type { OperatingHoursEntry, DayOfWeek } from '@/config/site';

/**
 * Formats a 24-hour time string to 12-hour format with AM/PM
 */
function formatTime(time: string): string {
  const [hours, minutes] = time.split(':').map(Number);
  const period = hours >= 12 ? 'PM' : 'AM';
  const hour12 = hours % 12 || 12;
  return `${hour12}:${minutes.toString().padStart(2, '0')} ${period}`;
}

/**
 * Groups operating hours by time range for cleaner display
 * e.g., "Monday - Friday: 9:00 AM - 5:00 PM"
 */
function formatOperatingHours(hours: OperatingHoursEntry[]): { days: string; time: string }[] {
  if (!hours || hours.length === 0) return [];

  const dayOrder: DayOfWeek[] = [
    'Monday',
    'Tuesday',
    'Wednesday',
    'Thursday',
    'Friday',
    'Saturday',
    'Sunday',
  ];
  const sorted = [...hours].sort(
    (a, b) => dayOrder.indexOf(a.dayOfWeek) - dayOrder.indexOf(b.dayOfWeek)
  );

  const groups: { days: DayOfWeek[]; open: string; close: string }[] = [];

  for (const entry of sorted) {
    const lastGroup = groups[groups.length - 1];

    if (lastGroup && lastGroup.open === entry.open && lastGroup.close === entry.close) {
      // Check if this day is consecutive
      const lastDay = lastGroup.days[lastGroup.days.length - 1];
      const lastDayIndex = dayOrder.indexOf(lastDay);
      const currentDayIndex = dayOrder.indexOf(entry.dayOfWeek);

      if (currentDayIndex === lastDayIndex + 1) {
        lastGroup.days.push(entry.dayOfWeek);
        continue;
      }
    }

    groups.push({
      days: [entry.dayOfWeek],
      open: entry.open,
      close: entry.close,
    });
  }

  return groups.map((group) => {
    const daysStr =
      group.days.length === 1
        ? group.days[0]
        : `${group.days[0]} - ${group.days[group.days.length - 1]}`;

    return {
      days: daysStr,
      time: `${formatTime(group.open)} - ${formatTime(group.close)}`,
    };
  });
}

const { phone, address, operatingHours } = siteConfig;
const hasAnyInfo = phone || address || (operatingHours && operatingHours.length > 0);
const formattedHours = operatingHours ? formatOperatingHours(operatingHours) : [];
---

{
  hasAnyInfo && (
    <section class="py-16 sm:py-20 lg:py-24 bg-neutral-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12 lg:mb-16">
          <h2 class="text-3xl sm:text-4xl font-bold text-neutral-900 mb-4">Contact Us</h2>
          <p class="text-lg text-neutral-600 max-w-2xl mx-auto">
            We would love to hear from you. Reach out using any of the methods below.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-4xl mx-auto">
          {/* Phone */}
          {phone && (
            <div class="bg-white p-6 rounded-xl shadow-sm text-center">
              <div class="w-12 h-12 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg
                  class="w-6 h-6 text-primary-600"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  aria-hidden="true"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z"
                  />
                </svg>
              </div>
              <h3 class="text-lg font-semibold text-neutral-900 mb-2">Phone</h3>
              <a
                href={`tel:${phone.replace(/[^+\d]/g, '')}`}
                class="text-primary-600 hover:text-primary-700 font-medium transition-colors"
              >
                {phone}
              </a>
            </div>
          )}

          {/* Address */}
          {address && (
            <div class="bg-white p-6 rounded-xl shadow-sm text-center">
              <div class="w-12 h-12 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg
                  class="w-6 h-6 text-primary-600"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  aria-hidden="true"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z"
                  />
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z"
                  />
                </svg>
              </div>
              <h3 class="text-lg font-semibold text-neutral-900 mb-2">Address</h3>
              <address class="text-neutral-600 not-italic leading-relaxed">
                {address.street}
                <br />
                {address.city}, {address.state} {address.zip}
              </address>
            </div>
          )}

          {/* Operating Hours */}
          {formattedHours.length > 0 && (
            <div class="bg-white p-6 rounded-xl shadow-sm text-center md:col-span-2 lg:col-span-1">
              <div class="w-12 h-12 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg
                  class="w-6 h-6 text-primary-600"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  aria-hidden="true"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z"
                  />
                </svg>
              </div>
              <h3 class="text-lg font-semibold text-neutral-900 mb-2">Hours</h3>
              <div class="text-neutral-600 space-y-1">
                {formattedHours.map((hours) => (
                  <div>
                    <span class="font-medium">{hours.days}:</span> <span>{hours.time}</span>
                  </div>
                ))}
              </div>
            </div>
          )}
        </div>
      </div>
    </section>
  )
}
