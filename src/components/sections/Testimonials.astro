---
/**
 * Testimonials Section Component
 *
 * Displays customer quotes and testimonials.
 *
 * @example
 * ```astro
 * <Testimonials
 *   testimonials={[
 *     { quote: "Great service!", name: "John Doe", attribution: "CEO, Acme Inc" }
 *   ]}
 * />
 * ```
 */

export interface TestimonialItem {
  /** Customer quote text */
  quote: string;
  /** Customer name */
  name: string;
  /** Optional attribution (job title, company, etc.) */
  attribution?: string;
}

export interface Props {
  /** Array of testimonial items to display */
  testimonials: TestimonialItem[];
}

const { testimonials } = Astro.props;
---

<section class="py-16 sm:py-20 lg:py-24 bg-neutral-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12 lg:mb-16">
      <h2 class="text-3xl sm:text-4xl font-bold text-neutral-900 mb-4">What Our Clients Say</h2>
      <p class="text-lg text-neutral-600 max-w-2xl mx-auto">
        Do not just take our word for it. Here is what our clients have to say about working with
        us.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        testimonials.map((testimonial) => (
          <div class="bg-white p-6 sm:p-8 rounded-xl shadow-sm hover:shadow-md transition-shadow">
            {/* Quote icon */}
            <div class="mb-4">
              <svg
                class="w-8 h-8 text-primary-300"
                fill="currentColor"
                viewBox="0 0 24 24"
                aria-hidden="true"
              >
                <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-10zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h4v10h-10z" />
              </svg>
            </div>

            {/* Quote text */}
            <blockquote class="text-neutral-700 leading-relaxed mb-6">
              "{testimonial.quote}"
            </blockquote>

            {/* Attribution */}
            <div class="border-t border-neutral-100 pt-4">
              <div class="font-semibold text-neutral-900">{testimonial.name}</div>
              {testimonial.attribution && (
                <div class="text-sm text-neutral-500 mt-1">{testimonial.attribution}</div>
              )}
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
