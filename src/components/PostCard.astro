---
/**
 * PostCard.astro
 *
 * Card component for blog post listings.
 * Displays featured image, title, description, date, author, and tags.
 *
 * @example
 * ```astro
 * <PostCard
 *   slug="my-post"
 *   title="My Blog Post"
 *   description="A short description"
 *   pubDate={new Date()}
 *   author={{ name: "John Doe", slug: "john-doe" }}
 *   tags={["news", "updates"]}
 *   image="/images/blog/post.jpg"
 *   isDraft={false}
 * />
 * ```
 */

interface Author {
  name: string;
  slug: string;
}

interface Props {
  /** Post slug for URL */
  slug: string;
  /** Post title */
  title: string;
  /** Post description/excerpt */
  description: string;
  /** Publication date */
  pubDate: Date;
  /** Author information */
  author: Author;
  /** Array of tag slugs */
  tags: string[];
  /** Featured image URL (optional) */
  image?: string;
  /** Whether this is a draft post (shows badge in dev mode) */
  isDraft?: boolean;
}

const { slug, title, description, pubDate, author, tags, image, isDraft = false } = Astro.props;

// Format date for display
const formattedDate = new Intl.DateTimeFormat('en-US', {
  year: 'numeric',
  month: 'short',
  day: 'numeric',
}).format(pubDate);

// Only show up to 3 tags on the card
const displayTags = tags.slice(0, 3);
const hasMoreTags = tags.length > 3;
---

<article
  class="group bg-white rounded-lg shadow-sm border border-neutral-200 overflow-hidden hover:shadow-md transition-shadow duration-200"
>
  {/* Featured Image */}
  <a href={`/blog/${slug}/`} class="block relative aspect-video overflow-hidden bg-neutral-100">
    {
      image ? (
        <img
          src={image}
          alt=""
          class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
          loading="lazy"
        />
      ) : (
        <div class="w-full h-full flex items-center justify-center bg-neutral-100">
          <svg
            class="w-12 h-12 text-neutral-300"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            aria-hidden="true"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="1.5"
              d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"
            />
          </svg>
        </div>
      )
    }

    {/* Draft Badge */}
    {
      isDraft && (
        <span class="absolute top-2 right-2 px-2 py-1 text-xs font-medium bg-amber-500 text-white rounded">
          Draft
        </span>
      )
    }
  </a>

  {/* Content */}
  <div class="p-5">
    {/* Meta: Author & Date */}
    <div class="flex items-center gap-2 text-sm text-neutral-500 mb-3">
      <a
        href={`/team/${author.slug}/`}
        class="font-medium text-primary-600 hover:text-primary-700 hover:underline"
      >
        {author.name}
      </a>
      <span class="text-neutral-300" aria-hidden="true">|</span>
      <time datetime={pubDate.toISOString()}>
        {formattedDate}
      </time>
    </div>

    {/* Title */}
    <h2 class="text-xl font-semibold text-neutral-900 mb-2 line-clamp-2">
      <a href={`/blog/${slug}/`} class="hover:text-primary-600 transition-colors">
        {title}
      </a>
    </h2>

    {/* Description */}
    <p class="text-neutral-600 text-sm line-clamp-3 mb-4">
      {description}
    </p>

    {/* Tags */}
    {
      displayTags.length > 0 && (
        <div class="flex flex-wrap items-center gap-2">
          {displayTags.map((tag) => (
            <a
              href={`/blog/tags/${tag.toLowerCase().replace(/\s+/g, '-')}/`}
              class="inline-block px-2.5 py-0.5 text-xs font-medium bg-neutral-100 text-neutral-600 rounded-full hover:bg-primary-100 hover:text-primary-700 transition-colors"
            >
              {tag}
            </a>
          ))}
          {hasMoreTags && <span class="text-xs text-neutral-400">+{tags.length - 3} more</span>}
        </div>
      )
    }
  </div>
</article>
