---
/**
 * Pagination.astro
 *
 * Reusable pagination component for blog listings.
 * Shows page numbers, previous/next links, and current page indicator.
 *
 * @example
 * ```astro
 * <Pagination
 *   currentPage={2}
 *   totalPages={5}
 *   basePath="/blog"
 * />
 * ```
 */

interface Props {
  /** Current page number (1-indexed) */
  currentPage: number;
  /** Total number of pages */
  totalPages: number;
  /** Base path for pagination URLs (without trailing slash) */
  basePath: string;
}

const { currentPage, totalPages, basePath } = Astro.props;

/**
 * Generates the URL for a given page number
 * Page 1 uses the base path, other pages use /basePath/N/
 */
function getPageUrl(page: number): string {
  if (page === 1) {
    return `${basePath}/`;
  }
  return `${basePath}/${page}/`;
}

// Calculate which page numbers to show
function getVisiblePages(): (number | 'ellipsis')[] {
  const pages: (number | 'ellipsis')[] = [];

  if (totalPages <= 7) {
    // Show all pages if 7 or fewer
    for (let i = 1; i <= totalPages; i++) {
      pages.push(i);
    }
  } else {
    // Always show first page
    pages.push(1);

    if (currentPage > 3) {
      pages.push('ellipsis');
    }

    // Show pages around current page
    const start = Math.max(2, currentPage - 1);
    const end = Math.min(totalPages - 1, currentPage + 1);

    for (let i = start; i <= end; i++) {
      pages.push(i);
    }

    if (currentPage < totalPages - 2) {
      pages.push('ellipsis');
    }

    // Always show last page
    pages.push(totalPages);
  }

  return pages;
}

const visiblePages = getVisiblePages();
const hasPrevious = currentPage > 1;
const hasNext = currentPage < totalPages;
---

<nav aria-label="Pagination" class="flex items-center justify-center gap-1 mt-12">
  {/* Previous Button */}
  {
    hasPrevious ? (
      <a
        href={getPageUrl(currentPage - 1)}
        class="inline-flex items-center gap-1 px-3 py-2 text-sm font-medium text-neutral-700 bg-white border border-neutral-300 rounded-md hover:bg-neutral-50 hover:border-neutral-400 transition-colors"
        aria-label="Go to previous page"
      >
        <svg
          class="w-4 h-4"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
          aria-hidden="true"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M15 19l-7-7 7-7"
          />
        </svg>
        <span class="hidden sm:inline">Previous</span>
      </a>
    ) : (
      <span
        class="inline-flex items-center gap-1 px-3 py-2 text-sm font-medium text-neutral-400 bg-neutral-50 border border-neutral-200 rounded-md cursor-not-allowed"
        aria-disabled="true"
      >
        <svg
          class="w-4 h-4"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
          aria-hidden="true"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M15 19l-7-7 7-7"
          />
        </svg>
        <span class="hidden sm:inline">Previous</span>
      </span>
    )
  }

  {/* Page Numbers */}
  <div class="flex items-center gap-1">
    {
      visiblePages.map((page) =>
        page === 'ellipsis' ? (
          <span class="px-2 py-2 text-sm text-neutral-400" aria-hidden="true">
            ...
          </span>
        ) : page === currentPage ? (
          <span
            class="inline-flex items-center justify-center min-w-[2.5rem] px-3 py-2 text-sm font-medium text-white bg-primary-600 border border-primary-600 rounded-md"
            aria-current="page"
          >
            {page}
          </span>
        ) : (
          <a
            href={getPageUrl(page)}
            class="inline-flex items-center justify-center min-w-[2.5rem] px-3 py-2 text-sm font-medium text-neutral-700 bg-white border border-neutral-300 rounded-md hover:bg-neutral-50 hover:border-neutral-400 transition-colors"
            aria-label={`Go to page ${page}`}
          >
            {page}
          </a>
        )
      )
    }
  </div>

  {/* Next Button */}
  {
    hasNext ? (
      <a
        href={getPageUrl(currentPage + 1)}
        class="inline-flex items-center gap-1 px-3 py-2 text-sm font-medium text-neutral-700 bg-white border border-neutral-300 rounded-md hover:bg-neutral-50 hover:border-neutral-400 transition-colors"
        aria-label="Go to next page"
      >
        <span class="hidden sm:inline">Next</span>
        <svg
          class="w-4 h-4"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
          aria-hidden="true"
        >
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </a>
    ) : (
      <span
        class="inline-flex items-center gap-1 px-3 py-2 text-sm font-medium text-neutral-400 bg-neutral-50 border border-neutral-200 rounded-md cursor-not-allowed"
        aria-disabled="true"
      >
        <span class="hidden sm:inline">Next</span>
        <svg
          class="w-4 h-4"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
          aria-hidden="true"
        >
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </span>
    )
  }
</nav>
