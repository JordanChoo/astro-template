---
/**
 * About Page
 *
 * Placeholder content about the company.
 */

import PageLayout from '../layouts/PageLayout.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import CTA from '../components/sections/CTA.astro';
import siteConfig from '../config/site';
import { getCollection } from 'astro:content';

const currentPath = Astro.url.pathname;

// Get founder from team collection
const teamMembers = await getCollection('team');
const founder = teamMembers.find((member) => member.data.slug === 'john-doe');
---

<PageLayout title="About">
  <Breadcrumbs currentPath={currentPath} />

  <div class="max-w-4xl mx-auto px-4 py-12 sm:px-6 lg:px-8">
    <h1 class="text-3xl sm:text-4xl font-bold text-neutral-900 mb-8">
      About {siteConfig.name}
    </h1>

    <div class="prose prose-neutral prose-lg max-w-none">
      <p class="text-xl text-neutral-600 mb-8">
        {
          siteConfig.tagline ||
            `Welcome to ${siteConfig.name}. We are dedicated to providing exceptional services to our community.`
        }
      </p>

      <section class="mb-12">
        <h2 class="text-2xl font-semibold text-neutral-900 mb-4">Our Story</h2>
        <p class="text-neutral-700 mb-4">
          {siteConfig.name} was founded with a simple mission: to deliver quality solutions that make
          a real difference in people's lives. What started as a small operation has grown into a trusted
          name in our industry.
        </p>
        <p class="text-neutral-700">
          Our team brings together decades of combined experience, united by a shared commitment to
          excellence and customer satisfaction. We believe that every client deserves personalized
          attention and solutions tailored to their unique needs.
        </p>
      </section>

      {/* Founder Section */}
      {
        founder && (
          <section class="mb-12">
            <h2 class="text-2xl font-semibold text-neutral-900 mb-6">Meet Our Founder</h2>
            <div class="flex flex-col sm:flex-row items-center sm:items-start gap-6 p-6 bg-neutral-50 rounded-xl border border-neutral-200">
              <div class="flex-shrink-0">
                <img
                  src={founder.data.avatar || '/images/placeholder-avatar.jpg'}
                  alt={founder.data.name}
                  class="w-24 h-24 sm:w-32 sm:h-32 rounded-full object-cover border-4 border-white shadow-lg"
                />
              </div>
              <div class="text-center sm:text-left">
                <h3 class="text-xl font-bold text-neutral-900">{founder.data.name}</h3>
                <p class="text-primary-600 font-medium mb-3">Founder & CEO</p>
                <p class="text-neutral-600 mb-4">{founder.data.bio}</p>
                <a
                  href={`/team/${founder.data.slug}`}
                  class="inline-flex items-center text-primary-600 font-medium hover:text-primary-700 group"
                >
                  View full profile
                  <svg
                    class="ml-2 w-4 h-4 group-hover:translate-x-1 transition-transform"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke-width="2"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3"
                    />
                  </svg>
                </a>
              </div>
            </div>
          </section>
        )
      }

      <section class="mb-12">
        <h2 class="text-2xl font-semibold text-neutral-900 mb-4">Our Mission</h2>
        <p class="text-neutral-700">
          To provide exceptional service while building lasting relationships with our clients. We
          strive to exceed expectations, maintain the highest standards of integrity, and contribute
          positively to our community.
        </p>
      </section>

      <section class="mb-12">
        <h2 class="text-2xl font-semibold text-neutral-900 mb-4">Our Values</h2>
        <ul class="space-y-4">
          <li class="flex items-start gap-3">
            <span
              class="flex-shrink-0 w-6 h-6 bg-primary-100 rounded-full flex items-center justify-center mt-1"
            >
              <svg
                class="w-4 h-4 text-primary-600"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="2"
                stroke="currentColor"
              >
                <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5"
                ></path>
              </svg>
            </span>
            <div>
              <strong class="text-neutral-900">Integrity</strong>
              <p class="text-neutral-700 mt-1">
                We conduct business with honesty and transparency in everything we do.
              </p>
            </div>
          </li>
          <li class="flex items-start gap-3">
            <span
              class="flex-shrink-0 w-6 h-6 bg-primary-100 rounded-full flex items-center justify-center mt-1"
            >
              <svg
                class="w-4 h-4 text-primary-600"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="2"
                stroke="currentColor"
              >
                <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5"
                ></path>
              </svg>
            </span>
            <div>
              <strong class="text-neutral-900">Excellence</strong>
              <p class="text-neutral-700 mt-1">
                We are committed to delivering the highest quality in our services.
              </p>
            </div>
          </li>
          <li class="flex items-start gap-3">
            <span
              class="flex-shrink-0 w-6 h-6 bg-primary-100 rounded-full flex items-center justify-center mt-1"
            >
              <svg
                class="w-4 h-4 text-primary-600"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="2"
                stroke="currentColor"
              >
                <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5"
                ></path>
              </svg>
            </span>
            <div>
              <strong class="text-neutral-900">Community</strong>
              <p class="text-neutral-700 mt-1">
                We believe in giving back and supporting the communities we serve.
              </p>
            </div>
          </li>
        </ul>
      </section>
    </div>
  </div>

  {/* CTA Section */}
  <CTA headline="Ready to Work With Us?" button={{ text: 'Get in Touch', link: '/contact' }} />
</PageLayout>
