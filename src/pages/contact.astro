---
/**
 * Contact Page
 *
 * Displays business contact information including phone, address,
 * and operating hours from the site configuration.
 */

import PageLayout from '../layouts/PageLayout.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import siteConfig from '../config/site';

const { phone, address, operatingHours } = siteConfig;
const currentPath = Astro.url.pathname;

/**
 * Format 24-hour time to 12-hour format with AM/PM
 * Example: "09:00" -> "9:00 AM", "17:00" -> "5:00 PM"
 */
function formatTime(time24: string): string {
  const [hours, minutes] = time24.split(':').map(Number);
  const period = hours >= 12 ? 'PM' : 'AM';
  const hours12 = hours % 12 || 12;
  return `${hours12}:${minutes.toString().padStart(2, '0')} ${period}`;
}

/**
 * Group consecutive days with the same hours for cleaner display
 * Example: Mon-Fri 9:00 AM - 5:00 PM instead of listing each day
 */
interface GroupedHours {
  days: string;
  hours: string;
}

function groupOperatingHours(): GroupedHours[] {
  if (!operatingHours || operatingHours.length === 0) {
    return [];
  }

  const dayOrder = ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday', 'Sunday'];
  const sortedHours = [...operatingHours].sort(
    (a, b) => dayOrder.indexOf(a.dayOfWeek) - dayOrder.indexOf(b.dayOfWeek)
  );

  const groups: GroupedHours[] = [];
  let currentGroup: { startDay: string; endDay: string; open: string; close: string } | null = null;

  for (const entry of sortedHours) {
    if (
      currentGroup &&
      currentGroup.open === entry.open &&
      currentGroup.close === entry.close &&
      dayOrder.indexOf(entry.dayOfWeek) === dayOrder.indexOf(currentGroup.endDay) + 1
    ) {
      // Extend the current group
      currentGroup.endDay = entry.dayOfWeek;
    } else {
      // Start a new group
      if (currentGroup) {
        const days =
          currentGroup.startDay === currentGroup.endDay
            ? currentGroup.startDay
            : `${currentGroup.startDay} - ${currentGroup.endDay}`;
        groups.push({
          days,
          hours: `${formatTime(currentGroup.open)} - ${formatTime(currentGroup.close)}`,
        });
      }
      currentGroup = {
        startDay: entry.dayOfWeek,
        endDay: entry.dayOfWeek,
        open: entry.open,
        close: entry.close,
      };
    }
  }

  // Don't forget the last group
  if (currentGroup) {
    const days =
      currentGroup.startDay === currentGroup.endDay
        ? currentGroup.startDay
        : `${currentGroup.startDay} - ${currentGroup.endDay}`;
    groups.push({
      days,
      hours: `${formatTime(currentGroup.open)} - ${formatTime(currentGroup.close)}`,
    });
  }

  return groups;
}

const groupedHours = groupOperatingHours();

// Format address for display
const formattedAddress = address
  ? {
      line1: address.street,
      line2: `${address.city}, ${address.state} ${address.zip}`,
    }
  : null;
---

<PageLayout title="Contact">
  <Breadcrumbs currentPath={currentPath} />

  <div class="max-w-4xl mx-auto px-4 py-12 sm:px-6 lg:px-8">
    <h1 class="text-3xl sm:text-4xl font-bold text-neutral-900 mb-8">Contact Us</h1>

    <p class="text-lg text-neutral-600 mb-12">
      We would love to hear from you. Reach out to us using any of the methods below.
    </p>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <!-- Phone Section -->
      {
        phone && (
          <div class="bg-white rounded-lg border border-neutral-200 p-6">
            <div class="flex items-center gap-3 mb-4">
              <div class="flex-shrink-0 w-10 h-10 bg-primary-100 rounded-lg flex items-center justify-center">
                <svg
                  class="w-5 h-5 text-primary-600"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="2"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z"
                  />
                </svg>
              </div>
              <h2 class="text-xl font-semibold text-neutral-900">Phone</h2>
            </div>
            <a
              href={`tel:${phone.replace(/[^\d+]/g, '')}`}
              class="text-lg text-primary-600 hover:text-primary-700 hover:underline"
            >
              {phone}
            </a>
          </div>
        )
      }

      <!-- Address Section -->
      {
        formattedAddress && (
          <div class="bg-white rounded-lg border border-neutral-200 p-6">
            <div class="flex items-center gap-3 mb-4">
              <div class="flex-shrink-0 w-10 h-10 bg-primary-100 rounded-lg flex items-center justify-center">
                <svg
                  class="w-5 h-5 text-primary-600"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="2"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z"
                  />
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z"
                  />
                </svg>
              </div>
              <h2 class="text-xl font-semibold text-neutral-900">Address</h2>
            </div>
            <address class="not-italic text-neutral-700">
              <p>{formattedAddress.line1}</p>
              <p>{formattedAddress.line2}</p>
            </address>
          </div>
        )
      }
    </div>

    <!-- Operating Hours Section -->
    {
      groupedHours.length > 0 && (
        <div class="mt-8 bg-white rounded-lg border border-neutral-200 p-6">
          <div class="flex items-center gap-3 mb-6">
            <div class="flex-shrink-0 w-10 h-10 bg-primary-100 rounded-lg flex items-center justify-center">
              <svg
                class="w-5 h-5 text-primary-600"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="2"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z"
                />
              </svg>
            </div>
            <h2 class="text-xl font-semibold text-neutral-900">Hours of Operation</h2>
          </div>
          <dl class="space-y-3">
            {groupedHours.map((group) => (
              <div class="flex justify-between items-center">
                <dt class="font-medium text-neutral-700">{group.days}</dt>
                <dd class="text-neutral-600">{group.hours}</dd>
              </div>
            ))}
          </dl>
        </div>
      )
    }
  </div>
</PageLayout>
